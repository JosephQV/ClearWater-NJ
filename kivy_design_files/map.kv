<MapScreen>:
    name: "map_screen"
    nav_bar_id: nav_bar_id
    on_enter: self.nav_bar_id.color_buttons(self.name)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        UserMenuNavigation:

        InteractiveMap:
            size_hint: (1.00, 0.78)
        
        ScreenNavigationBar:
            id: nav_bar_id

<InteractiveMap>:
    size: root.width, root.height

    Label:
        text: "Use the tap water contamination tracking map to view the results of user-submitted tap water tests across municipalities in NJ. Add your own results to the collective data by submitting your tap water test results through this app."
        color: "#000000"
        text_size: self.width, None
        size: 500, 150
        size_hint: None, None
        halign: "center"
        padding: 10
        pos_hint: {"center_x": 0.5, "top": 0.95}

    Button:
        text: "Load Map"
        size: 400, 100
        size_hint: None, None
        pos_hint: {"center_x": 0.5, "top": 0.65}
        background_normal: ""
        background_color: app.colors["secondary"]["rgba"]
        background_down: ""
        on_press: root.load_map()

    Button:
        text: "Open Map"
        size: 400, 100
        size_hint: None, None
        pos_hint: {"center_x": 0.5, "top": 0.50}
        background_normal: ""
        background_color: app.colors["secondary"]["rgba"]
        background_down: ""
        on_press: root.open_map()