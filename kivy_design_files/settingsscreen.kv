<SettingsScreen>:
    name: "settings_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.85)
        
            Label:
                size_hint: (1.00, 0.10)
                text: "Settings Screen"
                
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, root.height)

                BoxLayout: 
                    orientation: "vertical"
                    size_hint_y: None 
                    height: self.minimum_height
        
                    SettingSelection:
                        setting_name: "Language"
                        setting_choices: ["English", "Espa√±ol"]
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height
        
        ScreenNavigationBar:
            size_hint: (1.00, 0.15)


<SettingSelection>:
    orientation: "horizontal"
    padding: 10

    Label:
        size_hint_x: 0.30
        size_hint_y: None
        text: root.setting_name
        text_size: self.width, None
        halign: "center"
        valign: "middle"
    
    Spinner:
        size_hint_x: 0.70
        size_hint_y: None
        text: root.setting_choices[0]
        values: root.setting_choices
        on_text:
            print(f"Changed setting to {self.text}")