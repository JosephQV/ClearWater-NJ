<SettingsScreen>:
    name: "settings_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BackMenuBar:
            title_text: "Settings"
            prev_screen: "home_screen"

        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 1.00)
        
                
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 1.00)
                size: (root.width, root.height)

                BoxLayout: 
                    orientation: "vertical"
                    size_hint_y: None 
                    height: self.minimum_height
        
                    SettingSelection:
                        setting_name: "Language"
                        setting_choices: ["English", "Espa√±ol"]
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height

                    SettingSelection:
                        size_hint_y: None 
                        height: self.minimum_height
        

<SettingSelection>:
    orientation: "horizontal"
    padding: 10

    Label:
        size_hint_x: 0.30
        size_hint_y: None
        text: root.setting_name
        text_size: self.width, None
        halign: "center"
        valign: "middle"
    
    Spinner:
        size_hint_x: 0.70
        size_hint_y: None
        text: root.setting_choices[0]
        values: root.setting_choices
        on_text:
            print(f"Changed setting to {self.text}")