<CommunicationScreen>:
    name: "communication_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.85)

            Label:
                size_hint: (1.00, 0.10)
                text: "Communication/Feedback Screen"

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, root.height)

                BoxLayout: 
                    orientation: "vertical"
                    size_hint_y: None 
                    height: self.minimum_height

                    FeedbackNavigationMenu:
                        size_hint_y: None 
                        height: self.minimum_height
        
        ScreenNavigationBar:
            size_hint: (1.00, 0.15)


