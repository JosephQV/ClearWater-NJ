<TapWaterFeedbackScreen>:
    name: "tapwaterfeedback_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            size_hint: 1.00, 0.15
            orientation: "horizontal"

            Button:
                size_hint: 0.20, 1.00
                text: "Back"
                on_release:
                    app.root.current = "communication_screen"
            
