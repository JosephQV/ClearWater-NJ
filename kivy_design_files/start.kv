<StartScreen>:
    name: "start_screen"

    FloatLayout:

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: app.images["app"]
            size_hint: 0.65, 0.40
            pos_hint: {"center_x": 0.50, "center_y": 0.55}

