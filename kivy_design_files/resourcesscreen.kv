<ResourcesScreen>:
    name: "resources_screen"

    BoxLayout:
        orientation: "vertical"
        size_hint: (1.00, 0.85)
        
        Label:
            size_hint: (1.00, 0.10)
            text: "resources screen"
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: (1.00, 0.90)
            size: (root.width, root.height)

            BoxLayout: 
                orientation: "vertical"
                size_hint_y: None 
                height: self.minimum_height

                EducationalResourcesList:
                    size_hint_y: None 
                    height: self.minimum_height
        
        ScreenNavigationBar:
            size_hint: (1.00, 0.15)


<EducationalResourcesList>:
    orientation: "vertical"
    size_hint_y: None 
    height: self.minimum_height

    

    GridLayout:
        size_hint_y: None
        height: self.minimum_height
        cols: 1

        BoxLayout:
            size_hint_y: None
            height: 120
            Label:
                text: "Resource 1: [ref=link]NJ DOH Water Quality Overview[/ref]"
                markup: True
                on_ref_press:
                    root.open_resource_link(self.text)
        
        BoxLayout:
            size_hint_y: None
            height: 120
            Label:
                text: "Resource 2: [ref=link]Some other site[/ref]"
                markup: True
                on_ref_press:
                    root.open_resource_link(self.text)
        
        BoxLayout:
            size_hint_y: None
            height: 120
            Label:
                text: "etc: [ref=link]Some other site[/ref]"
                markup: True
                on_ref_press:
                    root.open_resource_link(self.text)
        