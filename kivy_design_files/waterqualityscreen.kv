<WaterQualityScreen>:
    name: "waterquality_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.85)
            
            Label:
                size_hint: (1.00, 0.10)
                text: "water quality screen"
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, root.height)

                BoxLayout: 
                    orientation: "vertical"
                    size_hint_y: None 
                    height: self.minimum_height

                    WaterTestInputForm:
                        size_hint_y: None 
                        height: self.minimum_height

        ScreenNavigationBar:
            size_hint: (1.00, 0.15)


<WaterTestInputForm>:
    orientation: "vertical"
    size_hint_y: None 
    height: self.minimum_height

    GridLayout:
        size_hint_y: None
        height: self.minimum_height
        cols: 1

        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Antimony"
            
            TextInput:
                id: kv_contaminant_value_1
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Arsenic"
            
            TextInput:
                id: kv_contaminant_value_2
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10
            
            Label:
                text: "Asbestos"
            
            TextInput:
                id: kv_contaminant_value_3
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Barium"
            
            TextInput:
                id: kv_contaminant_value_4
                text: "0"
                multiline: False
    
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Beryllium"
            
            TextInput:
                id: kv_contaminant_value_5
                text: "0"
                multiline: False
        
        Button:
            size_hint_y: None
            height: 120
            id: submit_button
            text: "Submit"
            on_release: 
                root.submit_button_action()
        Label:
            id: result_label