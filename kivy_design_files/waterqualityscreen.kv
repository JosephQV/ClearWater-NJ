<WaterQualityScreen>:
    name: "waterquality_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.85)
            
            Label:
                size_hint: (1.00, 0.10)
                text: "water quality screen"
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, root.height)

                BoxLayout: 
                    orientation: "vertical"
                    size_hint_y: None 
                    height: self.minimum_height

                    WaterTestInputForm:
                        size_hint_y: None 
                        height: self.minimum_height

        ScreenNavigationBar:
            size_hint: (1.00, 0.15)


<WaterTestInputForm>:
    orientation: "vertical"
    size_hint_y: None 
    height: self.minimum_height

    contaminant_1: kv_contaminant_1
    contaminant_2: kv_contaminant_2
    contaminant_3: kv_contaminant_3
    contaminant_4: kv_contaminant_4
    contaminant_5: kv_contaminant_5

    GridLayout:
        size_hint_y: None
        height: self.minimum_height
        cols: 1

        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Lead (mg/L)"
            
            TextInput:
                id: kv_contaminant_1
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "Copper (mg/L)"
            
            TextInput:
                id: kv_contaminant_2
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10
            
            Label:
                text: "other (mg/L)"
            
            TextInput:
                id: kv_contaminant_3
                text: "0"
                multiline: False
        
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "other (mg/L)"
            
            TextInput:
                id: kv_contaminant_4
                text: "0"
                multiline: False
    
        BoxLayout:
            size_hint_y: None
            height: 120
            padding: 10

            Label:
                text: "etc. (mg/L)"
            
            TextInput:
                id: kv_contaminant_5
                text: "0"
                multiline: False
        
        Button:
            size_hint_y: None
            height: 120
            text: "Submit"
            on_release: 
                root.submit_button_action()
