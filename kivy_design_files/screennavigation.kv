<ScreenNavigationBar>:
    size_hint: (1.00, 0.12)
    cols: 5
    mywater_btn: mywater_id
    map_btn: map_id
    home_btn: home_id
    resources_btn: resources_id
    communication_btn: communication_id

    mywater_img: mywater_img_id
    map_btn_img: map_img_id
    home_btn_img: home_img_id
    resources_btn_img: resources_img_id
    communication_btn_img: communication_img_id


    Button:
        id: mywater_id
        text: "My Water"
        font_size: 20
        text_size: self.size
        valign: "bottom"
        halign: "center"
        padding: [6, 6, 6, 12]
        color: "#000000"
        background_normal: ""
        background_color: "#FFFFFF"
        on_release:
            app.root.current = "waterquality_screen"

        Image: 
            id: mywater_img_id
            source: root.mywater_icon_path
            size: mywater_id.width/2, mywater_id.height/2
            pos: mywater_id.x + mywater_id.width/4, mywater_id.y + mywater_id.height/3

    Button:
        id: map_id
        text: "Map"
        font_size: 20
        text_size: self.size
        valign: "bottom"
        halign: "center"
        padding: [6, 6, 6, 12]
        color: "#000000"
        background_normal: ""
        background_color: "#FFFFFF"
        on_release: 

        Image:
            id: map_img_id
            source: root.map_icon_path
            size: map_id.width/2, map_id.height/2
            pos: map_id.x + map_id.width/4, map_id.y + map_id.height/3
    
    Button:
        id: home_id
        text: "Home"
        font_size: 20
        text_size: self.size
        valign: "bottom"
        halign: "center"
        padding: [6, 6, 6, 12]
        color: "#000000"
        background_normal: ""
        background_color: "#FFFFFF"
        on_release: 
            app.root.current = "home_screen"

        Image: 
            id: home_img_id
            source: root.home_icon_path
            size: home_id.width/2, home_id.height/2
            pos: home_id.x + home_id.width/4, home_id.y + home_id.height/3


    Button:
        id: resources_id
        text: "Resources"
        font_size: 20
        text_size: self.size
        valign: "bottom"
        halign: "center"
        padding: [6, 6, 6, 12]
        color: "#000000"
        background_normal: ""
        background_color: "#FFFFFF"
        on_release: 
            app.root.current = "resources_screen"
        
        Image: 
            id: resources_img_id
            source: root.resources_icon_path
            size: resources_id.width/2, resources_id.height/2
            pos: resources_id.x + resources_id.width/4, resources_id.y + resources_id.height/3


    Button:
        id: communication_id
        text: "Feedback"
        font_size: 20
        text_size: self.size
        valign: "bottom"
        halign: "center"
        padding: [6, 6, 6, 12]
        color: "#000000"
        background_normal: ""
        background_color: "#FFFFFF"
        on_release: 
            app.root.current = "communication_screen"

        Image: 
            id: communication_img_id
            source: root.communication_icon_path
            size: communication_id.width/2, communication_id.height/2
            pos: communication_id.x + communication_id.width/4, communication_id.y + communication_id.height/3


<UserMenuNavigation>:
    size_hint: 1.00, 0.10
    cols: 4
    row_force_default: True 
    row_default_height: self.height

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        id: app_icon_id
        source: root.app_icon_path
        size_hint: None, None
        size: root.height, root.height

    Label:
        id: app_title_id
        size_hint: None, None
        size: root.height*2, root.height
        text: "App Title"
        color: "#000000"

    Widget:

    Button:
        id: user_btn_id
        size_hint: None, None
        size: root.height, root.height
        background_normal: ""
        on_release:
            app.root.current = "waterquality_screen"

        Image:
            size_hint: None, None
            size: 0.65 * root.height, 0.65 * root.height
            center: user_btn_id.center
            source: root.user_icon_path

    Button:
        id: settings_btn_id
        size_hint: None, None
        size: root.height, root.height
        background_normal: ""
        on_release:
            root.navigate_to_settings(app.root)

        Image:
            size_hint: None, None
            size: 0.50 * root.height, 0.50 * root.height
            center: settings_btn_id.center
            source: root.settings_icon_path

<BackMenuBar>:
    size_hint: 1.00, 0.10
    orientation: "horizontal"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: back_btn
        size_hint: None, None
        size: root.height, root.height
        background_normal: ""
        on_release:
            root.back_to_prev_screen(app.root)

        Image:
            size_hint: None, None
            size: 0.50 * root.height, 0.50 * root.height
            center: back_btn.center
            source: root.back_icon_path
    
    Label:
        text: root.title_text
        color: "#000000"
            