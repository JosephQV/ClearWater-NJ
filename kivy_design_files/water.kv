<WaterQualityScreen>:
    name: "waterquality_screen"
    nav_bar_id: nav_bar_id
    on_enter: self.nav_bar_id.color_buttons(self.name)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        UserMenuNavigation:
    
        FloatLayout:
            size_hint: (1.00, 0.78)
            padding: 10

            Button:
                size_hint: None, None 
                size: 300, 120 
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text: "Enter Water Test Results"
                background_normal: ""
                background_color: app.colors["secondary"]["rgba"]
                background_down: ""
                on_release:
                    app.root.current = "watercontaminantselection_screen"
                    
        ScreenNavigationBar:
            id: nav_bar_id
            

<WaterTestInputScreen>:
    name: "watertestinput_screen"
    water_test_form: water_test_form

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BackMenuBar:
            title_text: "Contaminant Input"
            back_screen: "watercontaminantselection_screen"
            
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size: (root.width, root.height)

            WaterTestInputForm:
                id: water_test_form


<WaterTestInputForm>:
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    form_container: form_container
    padding: 10

    GridLayout:
        id: form_container
        size_hint_y: None
        height: self.minimum_height
        cols: 1
        padding: 10
        spacing: 10

    Button:
        size_hint_y: None
        height: 80
        text: "Submit"
        background_normal: ""
        background_color: app.colors["secondary"]["rgba"]
        background_down: ""
        on_release:
            root.submit_water_test()
            app.root.switch_screens("results_screen", None)


<WaterTestInputItem>:
    size_hint_y: None
    height: 80
    padding: 10

    canvas.before:
        Color:
            rgba: app.colors["gray"]["rgba"]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: f"{root.contaminant_name}  ({root.measuring_unit})"
        color: "#000000"
        text_size: self.width, None
        size_hint_x: 0.75
        height: self.texture_size[1]
        halign: "left"
        valign: "center"
        pos_hint: {"center_y": 0.50, "center_x": 0.50}
    
    TextInput:
        id: input_box
        hint_text: "0"
        size_hint_x: 0.25
        on_text: root.level_input_text = self.text
        multiline: False


<WaterContaminantSelectionScreen>:
    name: "watercontaminantselection_screen"
    selection_form: selection_form

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BackMenuBar:
            title_text: "Select Contaminants"
            back_screen: "waterquality_screen"

        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.90)

            Label:
                size_hint: (1.00, 0.10)
                text: "Select the water contaminants you have test results for"
                text_size: 3/4 * self.width, None
                size_hint_y: None 
                height: 2 * self.texture_size[1]
                halign: "center"
                valign: "middle"
                font_size: 26
                color: "#000000"
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, 400)

                WaterContaminantSelectionForm:
                    id: selection_form

<WaterContaminantSelectionForm>:
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    form_container: form_container
    padding: 10

    GridLayout:
        id: form_container
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        padding: 10
        spacing: 10

    Button:
        size_hint_y: None 
        height: 80
        text: "Submit"
        background_normal: ""
        background_color: app.colors["secondary"]["rgba"]
        background_down: ""
        on_release:
            app.root.get_screen("watercontaminantselection_screen").process_contaminant_selections(root)
            app.root.switch_screens("watertestinput_screen", None)
                   
<ContaminantSelectableItem>:
    orientation: "horizontal"
    size_hint_y: None 
    height: 80
    check_box: check_box
    padding: 10

    canvas.before:
        Color:
            rgba: app.colors["gray"]["rgba"]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.contaminant_text
        color: "#000000"
        text_size: self.width, None
        size_hint_x: 0.75
        height: self.texture_size[1]
        halign: "left"
        valign: "center"
        pos_hint: {"center_y": 0.50, "center_x": 0.50}
    
    CheckBox:
        id: check_box
        on_active: root.is_selected = True
        color: app.colors["secondary"]["rgba"]
        size_hint_x: 0.25
        height: root.height

<WaterTestResultsScreen>:
    name: "results_screen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BackMenuBar:
            title_text: "Water Test Results"
            back_screen: "waterquality_screen"

        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.90)

            Label:
                size_hint: (1.00, 0.10)
                text: "results screen placeholder"
                text_size: 3/4 * self.width, None
                size_hint_y: None 
                height: 2 * self.texture_size[1]
                halign: "center"
                valign: "middle"
                font_size: 26
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, 400)

                WaterTestResultsWidget:

<WaterTestResultsWidget>:
    orientation: "vertical"
