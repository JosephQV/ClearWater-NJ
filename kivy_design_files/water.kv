<WaterQualityScreen>:
    name: "waterquality_screen"
    nav_bar_id: nav_bar_id
    on_enter: self.nav_bar_id.color_buttons(self.name)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        UserMenuNavigation:
    
        FloatLayout:
            size_hint: (1.00, 0.78)
            padding: 10

            Label:
                text: "Submit results from your home tap water test to get feedback on your water quality and recommendations to address potential contamination. You may also choose to submit your tap water test results to an aggregated State dataset, which is used for approximate tracking of water contamination throughout New Jersey."
                color: "#000000"
                text_size: self.width, None
                size: 500, 150
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "top": 0.95}
                halign: "center"
                padding: 10

            Button:
                size_hint: None, None 
                size: 400, 100 
                pos_hint: {"center_x": 0.5, "top": 0.65}
                text: "Enter Water Test Results"
                background_normal: ""
                background_color: app.colors["secondary"]["rgba"]
                background_down: ""
                on_release:
                    app.root.current = "watercontaminantselection_screen"
                    
        ScreenNavigationBar:
            id: nav_bar_id
            

<WaterTestInputScreen>:
    name: "watertestinput_screen"
    water_test_form: water_test_form

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BackMenuBar:
            title_text: "Contaminant Input"
            back_screen: "watercontaminantselection_screen"
            
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size: (root.width, root.height)

            WaterTestInputForm:
                id: water_test_form


<WaterTestInputForm>:
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    form_container: form_container
    padding: 10

    GridLayout:
        id: form_container
        size_hint_y: None
        height: self.minimum_height
        cols: 1
        padding: 10
        spacing: 10

    Button:
        size_hint_y: None
        height: 80
        text: "Submit"
        background_normal: ""
        background_color: app.colors["secondary"]["rgba"]
        background_down: ""
        on_release:
            root.submit_water_test()
            app.root.switch_screens("results_screen", None)


<WaterTestInputItem>:
    size_hint_y: None
    height: 80
    padding: 10

    canvas.before:
        Color:
            rgba: app.colors["gray"]["rgba"]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: f"{root.contaminant_name}  ({root.measuring_unit})"
        color: "#000000"
        text_size: self.width, None
        size_hint_x: 0.75
        height: self.texture_size[1]
        halign: "left"
        valign: "center"
        pos_hint: {"center_y": 0.50, "center_x": 0.50}
    
    TextInput:
        id: input_box
        hint_text: "0"
        size_hint_x: 0.25
        on_text: root.level_input_text = self.text
        multiline: False


<WaterContaminantSelectionScreen>:
    name: "watercontaminantselection_screen"
    selection_form: selection_form

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BackMenuBar:
            title_text: "Select Contaminants"
            back_screen: "waterquality_screen"

        BoxLayout:
            orientation: "vertical"
            size_hint: (1.00, 0.90)

            Label:
                size_hint: (1.00, 0.10)
                text: "Select the water contaminants you have test results for"
                text_size: 3/4 * self.width, None
                size_hint_y: None 
                height: 2 * self.texture_size[1]
                halign: "center"
                valign: "middle"
                font_size: 26
                color: "#000000"
            
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: (1.00, 0.90)
                size: (root.width, 400)

                WaterContaminantSelectionForm:
                    id: selection_form
            
            Button:
                size_hint_y: None 
                height: 80
                text: "Submit"
                background_normal: ""
                background_color: app.colors["secondary"]["rgba"]
                background_down: ""
                on_release:
                    app.root.get_screen("watercontaminantselection_screen").process_contaminant_selections(selection_form)
                    app.root.switch_screens("watertestinput_screen", None)

<WaterContaminantSelectionForm>:
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    form_container: form_container
    padding: 10

    GridLayout:
        id: form_container
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        padding: 10
        spacing: 10
                   
<ContaminantSelectableItem>:
    orientation: "horizontal"
    size_hint_y: None 
    height: 80
    check_box: check_box
    padding: 10

    canvas.before:
        Color:
            rgba: app.colors["gray"]["rgba"]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.contaminant_text
        color: "#000000"
        text_size: self.width, None
        size_hint_x: 0.75
        height: self.texture_size[1]
        halign: "left"
        valign: "center"
        pos_hint: {"center_y": 0.50, "center_x": 0.50}
    
    CheckBox:
        id: check_box
        on_active: root.is_selected = True
        color: app.colors["secondary"]["rgba"]
        size_hint_x: 0.25
        height: root.height

<WaterTestResultsScreen>:
    name: "results_screen"
    on_enter: results_widget.update_results_data()

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BackMenuBar:
            title_text: "Water Test Results"
            back_screen: "waterquality_screen"
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: (1.00, 0.90)
            size: (root.width, 400)

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None 
                height: self.minimum_height
                padding: 10

                WaterTestResultsWidget:
                    id: results_widget

<WaterTestResultsWidget>:   # This is a BoxLayout
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    spacing: 10

    Label:
        size_hint_y: None
        text: "sample title text"
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "center"
        padding: 10

    Label:
        size_hint_y: None
        text: "sample body text: ____ ____ ___ _____ ___ __ ___ __ __ ___ _____ __ __ __ __ ___ __ ___ __ __ _ _ __ __ __ ____ __ ____ ___ ____ ___ __ ____"
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "left"
        padding: 10

    Label:
        size_hint_y: None
        text: f"(to demonstrate) this is the data available from user-submitted water test results on the previous screen. They are stored in resources/user/user_data.json.\n\nTest History:\n\n0:\n{root.user_data['water_tests'][-1]}\n\n1:\n{root.user_data['water_tests'][-2]}" 
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "left"
        padding: 10

<AllWaterTestsScreen>:
    name: "all_water_tests_screen"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        BackMenuBar:
            title_text: "My Water Test Results"
            back_screen: "user_screen"
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: (1.00, 0.90)
            size: (root.width, 400)

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None 
                height: self.minimum_height
                padding: 10

                AllWaterTestsWidget:
                    id: water_tests_widget

<AllWaterTestsWidget>:
    size_hint_y: None 
    height: self.minimum_height
    orientation: "vertical"
    spacing: 10

    Label:
        size_hint_y: None
        text: "sample title text"
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "center"
        padding: 10

<WaterTestResultItem>:
    size_hint_y: None
    height: 400

    canvas.before:
        Color:
            rgba: app.colors["gray"]["rgba"]
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        size_hint: None, None
        text: "Date: " + root.test_info["date"]
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "left"
        valign: "top"
        padding: 10
        pos_hint: {"center_x": 0.5, "top": 0.95}
        size: root.width, 75

    Label:
        size_hint: None, None
        text: "Score Summary:\n" + str(root.test_info["scores"])
        color: "#000000"
        text_size: root.width, None
        size: self.texture_size
        halign: "left"
        valign: "top"
        padding: 10
        pos_hint: {"center_x": 0.5, "top": 0.85}
        size: root.width, 150