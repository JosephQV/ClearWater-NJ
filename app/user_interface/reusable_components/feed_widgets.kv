<SmallFeedItem>:
    orientation: 'vertical'
    size_hint: None, None
    padding: dp(10)
    spacing: dp(14)
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Button:
        width: dp(120)
        height: dp(120)
        size_hint: None, None
        background_normal: root.image
        background_down: root.image
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_release: root.on_image_click(app.root)

    Label:
        text: root.title
        font_size: '14sp'
        font_name: "NotoSans"
        color: "#000000"
        valign: "middle"
        halign: "center"
        bold: True
        height: self.texture_size[1]
        text_size: self.width, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        shorten: False
        shorten_from: "right"
        max_lines: 2

    Label:
        text: root.subtitle_1
        font_size: '10sp'
        color: "#000000"
        valign: "middle"
        halign: "center"
        italic: True
        height: self.texture_size[1]
        text_size: self.width, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        shorten: False
        shorten_from: "right"
        max_lines: 1

    Label:
        text: root.subtitle_2
        font_size: '10sp'
        color: "#000000"
        valign: "middle"
        halign: "center"
        height: self.texture_size[1]
        text_size: self.width, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        italic: True
        shorten: False
        shorten_from: "right"
        max_lines: 1


<LargeFeedItem>:
    orientation: 'vertical'


<HorizontalFeed>:
    layout: layout
    bar_width: dp(6)
    scroll_type: ['bars', 'content']
    do_scroll_x: True
    do_scroll_y: False
    padding: dp(12)
    
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0.05
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: layout
        orientation: "horizontal"
        size_hint_x: None
        width: self.minimum_width
        padding: dp(6)
        spacing: dp(12)


<VerticalFeed>:
    layout: layout
    bar_width: dp(6)
    scroll_type: ['bars', 'content']
    do_scroll_x: False
    do_scroll_y: True
    padding: dp(12)
    
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0.05
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: layout
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        padding: dp(6)
        spacing: dp(12)


