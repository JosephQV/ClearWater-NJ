<ResourcesScreen>:
    name: "resources_screen"
    nav_bar_id: nav_bar_id
    educational_resources_list: educational_resources_list
    contaminant_resources_list: contaminant_resources_list
    tool_resources_list: tool_resources_list
    on_enter: 
        self.nav_bar_id.color_buttons(self.name)
        self.educational_resources_list.fill_feed(root.get_resource_feed_items("General Educational"))
        self.contaminant_resources_list.fill_feed(root.get_resource_feed_items("Contaminant"))
        self.tool_resources_list.fill_feed(root.get_resource_feed_items("External Tool"))

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height 

        UserMenuNavigation:
            
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: (1.00, 0.78)

            BoxLayout:
                size_hint_y: None 
                height: self.minimum_height
                orientation: "vertical"
                padding: 20
                spacing: 10

                Label:
                    size_hint_y: None
                    text: app.text["resources_screen"]["overview"][app.language()]
                    color: "#000000"
                    text_size: root.width, None
                    size: self.texture_size
                    halign: "center"
                    padding: 10

                Label:
                    size_hint_y: None
                    text: app.text["resources_screen"]["educational"][app.language()]
                    color: "#000000"
                    text_size: root.width, None
                    size: self.texture_size
                    halign: "center"
                    padding: 10

                HorizontalFeed:
                    id: educational_resources_list
                    size_hint_y: None
                    height: dp(200)
                    feed_item_size: "small"
                    feed_items: root.get_resource_feed_items("General Educational")

                Label:
                    size_hint_y: None
                    text: app.text["resources_screen"]["contaminants"][app.language()]
                    color: "#000000"
                    text_size: root.width, None
                    size: self.texture_size
                    halign: "center"
                    padding: 10
                
                HorizontalFeed:
                    id: contaminant_resources_list
                    size_hint_y: None
                    height: dp(200)
                    feed_item_size: "small"
                    feed_items: root.get_resource_feed_items("Contaminants")

                Label:
                    size_hint_y: None
                    text: app.text["resources_screen"]["tools"][app.language()]
                    color: "#000000"
                    text_size: root.width, None
                    size: self.texture_size
                    halign: "center"
                    padding: 10

                HorizontalFeed:
                    id: tool_resources_list
                    size_hint_y: None
                    height: dp(200)
                    feed_item_size: "small"
                    feed_items: root.get_resource_feed_items("External Tool")
        
        ScreenNavigationBar:
            id: nav_bar_id
        