<SettingsScreen>:
    name: "settings_screen"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BackMenuBar:
            title_text: "Settings"
            back_screen: "resources_screen"
        
        Form:
            form_items: root.get_settings_form_items()
            post_submit_function: root.update_settings

